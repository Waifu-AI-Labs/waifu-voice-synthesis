# Environment Configuration
# Copy this file to .env and update with your settings

# Flask Configuration
FLASK_PORT=5001
FLASK_DEBUG=False
SECRET_KEY=waifu-voice-synthesis-secret-key

# Voice Synthesis Configuration
DEFAULT_CHARACTER=sakura
DEFAULT_VOICE_STYLE=cute
SAMPLE_RATE=22050
ENABLE_GPU=True
CACHE_ENABLED=True
MAX_CACHE_SIZE=100

# Audio Configuration
AUDIO_FORMAT=wav
AUDIO_QUALITY=high
ENABLE_STREAMING=True

# Japanese Processing
JAPANESE_ACCENT_STRENGTH=0.8
ENABLE_ROMANIZATION=True

# API Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://localhost:8000
MAX_REQUEST_SIZE=16777216

# Integration Settings
WAIFU_CHAT_API_URL=http://localhost:5000
ENABLE_WEBSOCKET=True

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Performance
WORKER_THREADS=4
REQUEST_TIMEOUT=30

# Optional: External TTS Service (if using cloud TTS)
# TTS_SERVICE=azure
# TTS_API_KEY=your_api_key_here
# TTS_REGION=eastus
